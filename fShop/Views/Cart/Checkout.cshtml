@model List<fShop.Models.ViewModels.CartItem>

<h2>Thanh toán</h2>

<form method="post" asp-action="PlaceOrder">
    <div>
        <h3>Thông tin đơn hàng</h3>
        <table class="table">
    <thead>
        <tr>
            <th>Sản phẩm</th>
            <th>Size</th>
            <th>Màu</th>
            <th>Giá</th>
            <th>Số lượng</th>
            <th>Tổng</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ProductName</td>
                <td>@(item.SizeName ?? "Không chọn")</td>
                <td>@(item.ColorName ?? "Không chọn")</td>
                <td>@item.Price.ToString("C")</td>
                <td>@item.Quantity</td>
                <td>@item.Total.ToString("C")</td>
            </tr>
        }
    </tbody>
</table>


             

        <div>
            <h3>Tổng cộng: @Model.Sum(item => item.Total).ToString("C")</h3>
        </div>

        <button type="submit" class="btn btn-primary">Đặt hàng</button>
    </div>
</form>
