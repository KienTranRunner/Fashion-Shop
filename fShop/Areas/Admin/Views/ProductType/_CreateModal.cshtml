<div class="modal fade" id="createModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Thêm danh mục sản phẩn mới</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form action="/Admin/ProductType/Create" method="post">
                    @Html.AntiForgeryToken()

                    <div class="form-group">
                        <label for="NameProductType">Tên danh mục</label>
                        <input type="text" class="form-control" id="NameProductType" name="NameProductType" required>
                    </div>

                    <button type="submit" class="btn btn-primary">Lưu</button>
                </form>

            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $('#createModal form').on('submit', function (e) {
            e.preventDefault();

            $.ajax({
                url: 'ProductType/Create',
                type: 'POST',
                data: $(this).serialize(),
                success: function (response) {
                    alert('Thêm danh mục thành công!');
                    $('#createModal').modal('hide');
                    location.reload();
                },
                error: function (xhr) {
                    alert('Đã xảy ra lỗi: ' + xhr.responseText);
                }
            });
        });
    });

</script>